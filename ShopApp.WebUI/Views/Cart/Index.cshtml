@model CartModel
@{
    ViewData["Title"] = "Index";
}

<h1 style="margin-top:5px;">Shoping Cart</h1>

<div class="row mt-5">
    <div class="col-md-8">
        <div class="text-left">
            <h4>Cart Items</h4>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <img src="~/img/@item.ImageUrl" width="80">
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Price TL</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Quantity*item.Price) TL</td>
                        <td>
                            <button class="btn btn-danger btn-sm" type="submit">
                                <i class="fa fa-times fa-fw"></i>
                            </button>
                        </td>

                    </tr>
                }

            </tbody>

        </table>
    </div>
    <div class="col-md-4">
        <div class="text-left">
            <h4>Cart Summary</h4>
        </div>
        <table class="table">
            <tbody>
            <tr>
                <th>Cart Total</th>
                <td>@Model.TotalPrice().ToString() TL</td>
            </tr>
            <tr>
                <th>Shipping</th>
                <td>Free</td>
            </tr>
            <tr>
                <th>Order Total</th>
                <td>@Model.TotalPrice().ToString() TL</td>
            </tr>
            </tbody> 
        </table>
        <div class="text-center">
            <a href="/" class="btn btn-primary">
                <i class="fa fa-arrow-circle-left fa-fw"></i> Continue Shopping
            </a>
            <a href="/" class="btn btn-primary">
                <i class="fa fa-arrow-circle-right fa-fw"></i> Checkout
            </a>
        </div>
    </div>
</div>

